---
const nav = ['Автомобили',
	'Сервис',
	'Акции',
	'Услуги',
	'Карьера',
	'Контакты'];
---

<header class="site-header">
	<div class="left">
		<a href="/" class="logo">
			<img src="/images/logo.svg" alt="">
		</a>
		<button class="geo" type="button">
			<svg width="14" height="16">
				<use href="#geo"></use>
			</svg>
			Ульяновск
		</button>
	</div>
	<nav>
		<ul>
			{nav.map((item) => (
				<li><a href="/">{item}</a></li>
			))}
		</ul>
	</nav>
	<div class="unsigned">
		<a class="phone" href="tel:+78005110361">
			<span>8 (800) 511 03 61</span>
			<img src="/images/tel.svg" alt="">
		</a>
		<a href="/">
			<img src="/images/something.svg" alt="">
		</a>
		<a href="/">
			<img src="/images/favorites.svg" alt="">
		</a>
		<a href="/" class="profile">
			<img src="/images/profile.svg" alt="">
			Войти
		</a>
	</div>
</header>

<style lang="scss" is:global>
  .site-header {
    height: 80px;
    background-color: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    position: fixed;
    top: 0;
    width: 100%;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    z-index: 99;

    .left {
      display: flex;
      align-items: center;

      .logo {
        width: 235px;
        height: 27px;
        padding-left: 27px;
        margin-right: 21px;

        img {
          width: 100%;
        }
      }

      .geo {
        border-radius: 50px;
        background: #e7440b;
        font-weight: 600;
        font-size: 13px;
        color: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 5px;
        padding: 8px 22px;
      }
    }


    .unsigned {
      height: 100%;
      display: flex;

      a {
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 0 23px;

        &:not(:last-child) {
          border-right: 1px solid #dcdcdc;
        }
      }

      .phone {
        font-weight: 600;
        font-size: 18px;
        color: #e7440b;
        padding: 0 31px 0 0;

        img {
          display: none;
          @media (max-width: 1500px) {
            display: block;
          }
        }

        span {
          display: block;
          @media (max-width: 1500px) {
            display: none;
          }
        }


      }

      .profile {
        gap: 7px;
      }
    }

    nav {
      height: 100%;
      @media (max-width: 1350px) {
        display: none;
      }

      ul {
        display: flex;
        gap: 30px;
        align-items: center;
        height: 100%;

        li {
          height: 100%;
          font-weight: 600;
          font-size: 14px;
          color: #1a1a18;

          a {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100%;
          }
        }
      }
    }

  }
</style>
