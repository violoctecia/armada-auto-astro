---
const params = [
	'Все',
	'Новые авто',
	'С пробегом',
	'Сервис',
	'Кузовной ремонт',
];

const items = [
	{
		img: '/images/special-offers-item1.png',
		title: 'Только в июле! TANK 300 с выгодой до 450 000 ₽!',
	},
	{
		img: '/images/special-offers-item2.png',
		title: 'JAECOO J8 - новый флагманский кроссовер бренда',
	},
	{
		img: '/images/special-offers-item1.png',
		title: 'Только в июле! TANK 300 с выгодой до 450 000 ₽!',
	},
	{
		img: '/images/special-offers-item2.png',
		title: 'JAECOO J8 - новый флагманский кроссовер бренда',
	},
	{
		img: '/images/special-offers-item1.png',
		title: 'Только в июле! TANK 300 с выгодой до 450 000 ₽!',
	},
	{
		img: '/images/special-offers-item2.png',
		title: 'JAECOO J8 - новый флагманский кроссовер бренда',
	},
];
---

<section class="special-offers container">
	<h2 class="h2">Акции</h2>
	<div class="params no-scrollbar">
		{params.map((param, index) => (
			<button type="button" class={index === 0 ? 'active' : ''}>
				{param}
			</button>
		))}
	</div>
	<div class="special-swiper swiper">
		<div class="swiper-wrapper">
			{items.map(i => (
				<a href="/" class="special-card swiper-slide">
					<div class="img">
						<img src={i.img} alt="" loading="lazy">
					</div>
					<h3>{i.title}</h3>
				</a>
			))}
		</div>
		<button class="nav-el specialPrev">
			<svg width="8" height="12">
				<use href="#right-arrow"></use>
			</svg>
		</button>
		<button class="nav-el specialNext">
			<svg width="8" height="12">
				<use href="#right-arrow"></use>
			</svg>
		</button>

	</div>
</section>

<script src="../scripts/specialOffersSwiper.js"></script>
